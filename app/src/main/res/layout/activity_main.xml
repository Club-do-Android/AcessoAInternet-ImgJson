<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pedro.jsonimg.MainActivity">

    <Button
        android:text="Ler JSON via OkHttp"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:id="@+id/loadJson"
        android:onClick="loadJSONokhttp"
        android:layout_width="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Ler JSON via Retrofit"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/loadJsonretrofit"
        android:onClick="loadJSONRetrofit"
        android:layout_below="@+id/loadJson"
        android:layout_alignLeft="@+id/loadJson"
        android:layout_alignStart="@+id/loadJson"
        android:layout_marginTop="30dp" />

    <Button
        android:text="Ler Imagem"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/loadImg"
        android:onClick="loadImages"
        android:layout_below="@+id/loadJsonretrofit"
        android:layout_alignLeft="@+id/loadJson"
        android:layout_alignStart="@+id/loadJson"
        android:layout_marginTop="30dp" />
</RelativeLayout>
